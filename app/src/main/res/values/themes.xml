<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Groczy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/groczyText</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.Groczy">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/statusBar</item>
       <!-- <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>-->
    </style>
    <style name="GeneralTheam" parent="Theme.Groczy">
        <item name="android:statusBarColor">#608484</item>
       <!-- <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>-->
    </style>

    <style name="SettingsoptionsText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#404e58</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="BlueDialogAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_in_b2t</item>
        <item name="android:windowExitAnimation">@anim/slide_out_t2b</item>
    </style>

    <style name="AppTheme.NoWiredStrapInNavigationBar" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#4D000000</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="colorPrimary">@color/groczyText</item>
    </style>

    <style name="DialogTitle">
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/groczyText</item>
    </style>


    <style name="DividerStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/groczyText</item>
    </style>

    <style name="SettingsTextColor">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>